@page "/component"

<h3>Nowe</h3>

<img src="images/sa.png" alt="Sample Image" style="width: 190px; height: 130px;" />

<div>
    <label for="userInput">Tekst:</label>
    <input type="text" id="userInput">
</div>

<button type="button" onclick="showText()">Pokaż</button>

<p id="displayText" style="display: none;"></p>

<h4>Lista</h4>
<ul class="my-list">
    <li class="item1">1</li>
    <li class="item2">2</li>
    <li class="item3">3</li>
</ul>

<style>
    body {
        font-family: Arial, sans-serif;
    }

    h3 {
        color: #333;
    }

    img {
        display: block;
        margin-bottom: 20px;
    }

    label {
        display: inline-block;
        width: 150px;
        font-weight: bold;
    }

    input[type="text"] {
        width: 200px;
        padding: 5px;
        margin-bottom: 10px;
    }

    button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        margin-top: 10px;
    }

        button:hover {
            background-color: #0056b3;
        }

    .my-list {
        list-style-type: none;
        padding: 0;
        margin: 20px 0;
    }

        .my-list li {
            background-color: #f4f4f4;
            padding: 10px;
            margin-bottom: 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            .my-list li:hover {
                background-color: #e0e0e0;
            }

    .item1 {
        color: red;
    }

    .item2 {
        color: blue;
    }

    .item3 {
        color: green;
    }
</style>

<script>
    function showText() {
        var userInput = document.getElementById("userInput").value;
        var displayText = document.getElementById("displayText");

        displayText.innerHTML = userInput;
        displayText.style.display = "block";
    }
</script>